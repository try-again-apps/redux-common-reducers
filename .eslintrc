{
  "extends": ["eslint:recommended", "eslint-config-prettier"],
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "globalReturn": true,
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "document": false,
    "escape": false,
    "navigator": false,
    "unescape": false,
    "window": false
  },
  "rules": {
    "no-console": [2, { "allow": ["info"] }],
    "eqeqeq": [2, "smart"],
    "no-var": 2,
    "no-unused-vars": [1, { "vars": "local", "args": "none" }],
    "quote-props": [1, "consistent-as-needed"]
  }
}
